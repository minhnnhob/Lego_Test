<div class="container">
<h1 style="color:red;">update product</h1>

<form action="/admin/products/updateP/" method="POST">

    <label for="ID" class="form-label">Product ID</label>
    <input type="text"  class="form-control" name="id" value="{{Product._id}}">

    
    <div class="row">
      <div class="col">
        <label for="name" class="form-label">Product Name</label>
        <input type="text"  class="form-control" name="name" value="{{Product.name}}">
    </div>
      <div class="col">
        <label for="age" class="form-label">Age</label>
        <input type="number" class="form-control" name="age" value="{{Product.age}}">
      </div>
    </div>
    
    
    <div class="row">
      <div class="col">
        <label for="price" class="form-label">Price</label>
        <input type="number" class="form-control" name="price" value="{{Product.price}}">
    </div>
      <div class="col">
        <label for="quantity" class="form-label">Quantity</label>
        <input type="number" class="form-control" name="quantity" value="{{Product.quantity}}">
      </div>
    </div>

    <label for="description" class="form-label">Description</label>
    <input type="text"  class="form-control" name="description" value="{{Product.description}}">

    <label for="rating" class="form-label">Rating</label>
    <input type="number" class="form-control" name="ratting" value="{{Product.ratting}}">

    <div class="row">
    <div class="col">
    <label for="theme" class="form-label">Theme: </label>
    <select name="theme" id="theme">
    {{!-- {{#each themes}} --}}
    <option value="{{Product._id}}">{{Product.name}}</option>
    {{!-- {{/each}} --}}
    </select>
    </div>

    <div class="col">
    <label for="category" class="form-label">Category: </label>
    <select name="category" id="category">
    {{!-- {{#each categories}} --}}
    <option value="{{Product._id}}">{{Product.name}}</option>
    {{!-- {{/each}} --}}
    </select>
    </div>
    
    </div>


    <div style= "position:relative; top:10px">
    <label for="image-upload" class="form-label">Image No1: </label>
    <input  type="file"  id="img-upload-input" name="img1" value="{{Product.img1}}">
    </div>

    <div style= "position:relative; top:10px">
    <label for="image-upload" class="form-label">Image No2: </label>
    <input  type="file"  id="img-upload-input" name="img2" value="{{Product.img2}}">
    </div>

    <div style= "position:relative; top:10px">
    <label for="image-upload" class="form-label">Image No3: </label>
    <input  type="file"  id="img-upload-input" name="img3" value="{{Product.img3}}">
    </div>
    <br>
    <div ><input type="submit" style="width: 100px" class="btn btn-warning"></div>
    
    <h2><a href="/admin/products" class="btn btn-info">Go back to Product Management Page</a></h2>
</form>
